@model TaskManager.Models.Employee

<form method="post" asp-action="DeletePost">

	@*Доступ к ID в POST-EDIT*@
	<input asp-for="Id" hidden/>

	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-info pl-3">Удалить сотрудника</h2>
		</div>


		<div class="row">
			<div class="col-8">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="FullName"></label>
					</div>
					<div class="col-8">
						<input asp-for="FullName" disabled class="form-control"/>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-4">
						<label asp-for="DOB"></label>
					</div>
					<div class="col-8">
						<input asp-for="DOB" disabled class="form-control"/>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Gender"></label>
					</div>
					<div class="col-8">
						<input asp-for="Gender" disabled class="form-control"/>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-8 offset-4 row">

						<div class="col">
						   <input id="Delete" type="submit" class="btn btn-danger w-100" value="Delete"/>
						</div>
						<div class="col">
							<a asp-action="Index" class="btn btn-success w-100">Back</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-4">
				@* Keep this empty *@
			</div>
		</div>
		
	</div>
</form>

@section Scripts
{
	
}