@model TaskManager.Models.Task

<form method="post" asp-action="Edit">

    @*Доступ к ID в POST-EDIT*@
    <input asp-for="Id" hidden/>

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Редактировать задачу</h2>
        </div>


        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                       <label asp-for="EmployeeId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="EmployeeId" asp-items="@ViewBag.EmployeeDropDown" class="form-control">
                            <option disabled selected>--Выберете исполнителя--</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                       <label asp-for="Priority"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Priority" class="form-control"/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                       <label asp-for="Date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Date" class="form-control"/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                       <label asp-for="Status"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Status" class="form-control"/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                           <input type="submit" class="btn btn-info w-100" value="Изменить"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Вернуться</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
        
    </div>
</form>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}